{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Next.js: Debug Server (Backend + Frontend)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev"
    },
    {
      "name": "Next.js: Debug Client (Frontend)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Next.js: Debug API Routes (Backend)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["-r", "dotenv/config"],
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "compounds": [
    {
      "name": "Next.js: FullStack Debug",
      "configurations": [
        "Next.js: Debug Server (Backend + Frontend)",
        "Next.js: Debug Client (Frontend)"
      ]
    }
  ]
}